rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      // Allow public read for published events, and authenticated read for any event
      allow read: if request.auth != null || resource.data.status == 'published';
      // Allow authenticated users to list events
      allow list: if request.auth != null;
      // Allow write for authenticated users
      allow write: if request.auth != null;

      match /attendees/{attendeeId} {
        // Allow anyone to register for an event
        allow create;
        // Only authenticated users can manage or view attendees
        allow read, list, update, delete: if request.auth != null;
      }
    }
  }
}
